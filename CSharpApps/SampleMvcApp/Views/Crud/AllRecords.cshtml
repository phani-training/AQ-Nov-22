@model List<SampleMvcApp.Models.EmpTable>

@{
    ViewBag.Title = "AllRecords";
}

<h1>List of Employees with Us</h1>
<hr />
@Html.ActionLink("Add New Employee", "AddNew")
<table class="table table-bordered" border="1">
    <tr>
        <th>Employee ID</th>
        <th>Employee Name</th>
        <th>Employee Address</th>
        <th>Employee Salary</th>
        <th>Options</th>
    </tr>
    @foreach (var emp in Model)
    {
        <tr>
            <td>@emp.Id</td>
            <td>@emp.EmpName</td>
            <td>@emp.EmpAddress</td>
            <td>@emp.EmpSalary</td>
            <td>
                @Html.ActionLink("Edit", "ViewRec", new { id = emp.Id})
                @Html.ActionLink("X", "Delete", new { id = emp.Id })
            </td>
        </tr>
    }
</table>

